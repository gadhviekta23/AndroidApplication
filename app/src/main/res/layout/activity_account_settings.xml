<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.AccountSettingsActivity">

        <LinearLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|left"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/backarrow"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/account_settings_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account settings"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="100sp"
                android:layout_height="93dp"
                android:src="@drawable/bbt"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_txt" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/two">

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bhargav Tank"
                android:textColor="@color/orange"
                android:textSize="23dp" />

        </LinearLayout>

            <TextView
                android:id="@+id/email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="22dp"
                android:layout_margin="15dp"
                android:drawableRight="@drawable/rightarrow"
                android:drawableTint="@color/orange"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/three"/>


            <TextView
                android:id="@+id/password_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="22dp"
                android:layout_margin="15dp"
                android:drawableRight="@drawable/rightarrow"
                android:drawableTint="@color/orange"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_txt"/>




            <TextView
                android:id="@+id/country_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country/Region"
                android:textSize="22dp"
                android:layout_margin="15dp"
                android:drawableRight="@drawable/rightarrow"
                android:drawableTint="@color/orange"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/password_txt"/>



            <TextView
                android:id="@+id/gender_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="22dp"
                android:layout_margin="15dp"
                android:drawableRight="@drawable/rightarrow"
                android:drawableTint="@color/orange"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/country_txt"/>





            <TextView
                android:id="@+id/business_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business type"
                android:layout_margin="15dp"
                android:drawableRight="@drawable/rightarrow"
                android:drawableTint="@color/orange"
                android:textSize="22dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gender_txt"/>




            <TextView
                android:id="@+id/contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact name"
                android:layout_margin="15dp"
                android:drawableRight="@drawable/rightarrow"
                android:drawableTint="@color/orange"
                android:textSize="22dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/business_type"/>





            <TextView
                android:id="@+id/login_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login options"
                android:layout_margin="15dp"
                android:drawableRight="@drawable/rightarrow"
                android:drawableTint="@color/orange"
                android:textSize="22dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contact_name"/>



            <TextView
                android:id="@+id/claimed_account_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Claimed account"
                android:textSize="22dp"
                android:layout_margin="15dp"
                android:drawableRight="@drawable/rightarrow"
                android:drawableTint="@color/orange"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/login_txt"/>



            <TextView
                android:id="@+id/app_theme_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App theme"
                android:textSize="22dp"
                android:layout_margin="15dp"
                android:drawableRight="@drawable/rightarrow"
                android:drawableTint="@color/orange"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/claimed_account_txt"/>


            <TextView
                android:id="@+id/deactivate_account_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deactivate account"
                android:textSize="22dp"
                android:layout_margin="15dp"
                android:drawableRight="@drawable/rightarrow"
                android:drawableTint="@color/orange"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/app_theme_txt"/>


            <TextView
                android:id="@+id/close_account_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Close account"
                android:textSize="22dp"
                android:layout_margin="15dp"
                android:drawableRight="@drawable/rightarrow"
                android:drawableTint="@color/orange"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/deactivate_account_txt"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>