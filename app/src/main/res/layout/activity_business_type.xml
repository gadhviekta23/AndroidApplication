<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BusinessTypeActivity">

    <Button
        android:id="@+id/btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/backarrow"
        android:layout_margin="7dp"/>

    <LinearLayout
        android:id="@+id/businesstype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business type"
            android:textSize="23dp" />

    </LinearLayout>

    <Button
        android:id="@+id/done_btn"
        android:layout_width="65dp"
        android:layout_height="45dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Done"
        android:textSize="10dp"
        android:layout_marginRight="10dp"/>

    <RadioGroup
        android:id="@+id/business_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn">

        <RadioButton
            android:id="@+id/professional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Professional"
            android:textSize="22dp"/>

        <RadioButton
            android:id="@+id/public_figure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Public figure"
            android:textSize="22dp"/>

        <RadioButton
            android:id="@+id/media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="media"
            android:textSize="22dp"/>

        <RadioButton
            android:id="@+id/brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Brand"
            android:textSize="22dp"/>

        <RadioButton
            android:id="@+id/retailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Retailer"
            android:textSize="22dp"/>

        <RadioButton
            android:id="@+id/online_marketplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Online marketplace"
            android:textSize="22dp"/>

        <RadioButton
            android:id="@+id/local_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Local business"
            android:textSize="22dp"/>

        <RadioButton
            android:id="@+id/instituation_non_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Instituation/Non-profit"
            android:textSize="22dp"/>

        <RadioButton
            android:id="@+id/other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Other"
            android:textSize="22dp"/>




    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>