<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/carview_AVV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relativelayout_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                <VideoView
                    android:id="@+id/view_image"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:src="@drawable/nature1"
                 />

                <ImageView
                    android:id="@+id/extend_AVV"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:padding="10dp"
                    android:src="@drawable/expand"
                    app:tint="@color/orange" />
                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintlayout_vv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relativelayout_one"
                    >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/profilepic"
                    android:text="meet kalola"
                    android:textSize="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                  />

                    <TextView
                        android:id="@+id/name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Mahek | Lifez Easy"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/profile_img"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="16k followers"
                        android:textSize="15dp"
                        app:layout_constraintLeft_toRightOf="@+id/profile_img"
                        app:layout_constraintTop_toBottomOf="@id/name_text" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_bg"
                        android:text="Follow"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/descreption_vv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Best hindi song What's app \n Status Video"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_below="@id/constraintlayout_vv"/>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Best song ever Ek ladki ko khidki se dekkha all \n time favourite for all generation for best \n what's app status"
                    android:textColor="@color/black"
                    android:layout_below="@id/descreption_vv"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/linearLayout_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/description"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >


                    <ImageView
                        android:id="@+id/like"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:padding="10dp"
                        android:src="@drawable/heart"
                       />

                    <LinearLayout
                        android:id="@+id/linear2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_below="@id/description"
                        >

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button_bg"
                            android:text="Visite"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/btn_save"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/button_bg"
                            android:text="Save"
                            android:textAllCaps="false" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/dowload_AVV"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:src="@drawable/download"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="parent"
                        app:tint="@color/orange" />

                </LinearLayout>

                <TextView
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Comments"
                    android:textColor="@color/black"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_below="@id/linearLayout_two"
                   />

                <TextView
                    android:id="@+id/text_avv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Love this pin? Let Lifez Easy know!"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_below="@id/comment"
                   />

                <TextView
                    android:id="@+id/morevideo_AVV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="More like this"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="20dp"
                    android:layout_below="@id/text_avv"
                 />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_AVV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/morevideo_AVV"
                    android:layout_marginTop="10dp" />
            </RelativeLayout>



        </androidx.cardview.widget.CardView>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>