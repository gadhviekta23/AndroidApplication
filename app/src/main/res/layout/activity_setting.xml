<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingActivity">

    <Button
        android:id="@+id/btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/backarrow"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/setting_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="135dp"
        android:textSize="20dp"
        android:text="Settings"
        />

    <TextView
        android:id="@+id/personal_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn"
        android:textSize="20dp"
        android:text="Personal information"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        />

    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personal_txt"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit profile"
            android:textSize="25dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/rightarrow"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/account_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account settings"
            android:textSize="25dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/account_btn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/rightarrow"
            android:layout_marginLeft="154dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/notification_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textSize="25dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/notification_btn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/rightarrow"
            android:layout_marginLeft="187dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/forth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/third"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/privacy_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy &amp; data"
            android:textSize="25dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/privacy_btn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/rightarrow"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/action_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/forth"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:text="Action"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/add_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/action_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:text="Add account"
        android:layout_marginLeft="10dp"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/log_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/add_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:text="Log out"
        android:layout_marginLeft="10dp"
        android:textSize="25dp" />

</androidx.constraintlayout.widget.ConstraintLayout>