<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout_HIT"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/carview_IFP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_IFP"
                    android:layout_width="110dp"
                    android:layout_height="141dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="1dp"
                    android:src="@drawable/artgallerysix"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/image_ome_IFP"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:src="@drawable/nature1"
                    app:layout_constraintLeft_toRightOf="@id/image_IFP"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/image_two_IFP"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/nature4"
                    app:layout_constraintLeft_toRightOf="@id/image_IFP"
                    app:layout_constraintTop_toBottomOf="@id/image_ome_IFP" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/text_IFP"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/carview_IFP"
            android:text="All Pins"
            android:gravity="center|left"
            android:textColor="@color/black"
            />

    </RelativeLayout>
</LinearLayout>