<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CreateStoryActivity">

    <RelativeLayout
        android:id="@+id/linearLayout_one"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/btn_back_AS"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/backarrow"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="Create Story"
            />

        <TextView
            android:id="@+id/next_CS"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:text="next"
            android:backgroundTint="@color/orange"
            android:background="@drawable/button_bg"
            />



    </RelativeLayout>

    <VideoView
        android:id="@+id/video_AS"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_margin="5dp"
        android:src="@color/orange"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_one"
        />

    <ImageView
        android:id="@+id/thumbnails_CS"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/nature"
        android:layout_margin="10dp"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/video_AS"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_one"
        />

    <TextView
        android:id="@+id/title_AS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/video_AS"
        />

    <EditText
        android:id="@+id/title_edit_AS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_AS"
        android:inputType="text"
        android:hint="@string/give_your_pin_a_title" />

    <TextView
        android:id="@+id/description_AS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_edit_AS"
        />

    <EditText
        android:id="@+id/description_edit_AS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_AS"
        android:inputType="text"
        android:hint="@string/say_more_about_your_pin" />

    <TextView
        android:id="@+id/description_website_AS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description_website"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_edit_AS"
        />

    <EditText
        android:id="@+id/description_website_edit_AS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_website_AS"
        android:inputType="text"
        android:hint="@string/give_your_pin_a_title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_website_edit_AS"
        />
</androidx.constraintlayout.widget.ConstraintLayout>