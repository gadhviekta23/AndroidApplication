<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectFCActivity">

    <TextView
        android:id="@+id/favourite_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:text="Favourite Search"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/favourite_search"
        >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cag_img1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="240dp"
                    android:src="@color/yellow"
                    app:civ_border_color="#FF000000"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cag_img2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="160dp"
                    app:civ_border_color="#FF000000"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@color/orange"
                    />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cag_img3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="145dp"
                    android:layout_marginTop="120dp"
                    app:civ_border_color="#FF000000"
                    android:src="@color/purple_500"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cag_img4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="260dp"
                    app:civ_border_color="#FF000000"
                    android:src="@color/purple_200"
                    app:layout_constraintLeft_toRightOf="@id/cag_img1"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cag_img5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="200dp"
                    app:civ_border_color="#FF000000"
                    android:src="@color/yellow"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cag_img6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="140dp"
                    android:src="@color/green"
                    app:civ_border_color="#FF000000"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cag_img7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="340dp"
                    android:src="@color/purpul"
                    app:civ_border_color="#FF000000"
                    app:layout_constraintLeft_toRightOf="@id/cag_img1"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cag_img8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="275dp"
                    android:src="@color/orange"
                    app:civ_border_color="#FF000000"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />




            </androidx.constraintlayout.widget.ConstraintLayout>


        </HorizontalScrollView>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>