<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.EditProfileActivity">

        <Button
            android:id="@+id/btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/backarrow"
           android:layout_margin="7dp"/>

        <LinearLayout
            android:id="@+id/edit_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/btn"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit profile"
                android:textSize="23dp" />

        </LinearLayout>

        <Button
            android:id="@+id/done_btn"
            android:layout_width="65dp"
            android:layout_height="45dp"
           app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Done"
            android:textSize="10dp"
            android:layout_marginRight="10dp"/>


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/bbt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_txt"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_marginLeft="130sp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="60dp"
            android:layout_height="45dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_image"
            android:layout_marginLeft="160dp"
            android:text="Edit"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/fname_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_btn"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:text="First name"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:id="@+id/fname"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:hint="Add"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fname_txt"
            android:textSize="22dp"
            android:layout_marginLeft="13dp"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/surname_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fname"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:text="Surname"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:id="@+id/surname"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:hint="Add"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/surname_txt"
            android:textSize="22dp"
            android:layout_marginLeft="13dp"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/username_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/surname"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:text="Username"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:id="@+id/username"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:hint="Add"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username_txt"
            android:textSize="22dp"
            android:layout_marginLeft="13dp"
            android:inputType="text" />

        <TextView
            android:id="@+id/about_you_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:text="About you"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:id="@+id/about_you"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:hint="Add"
            android:inputType="text"
            android:textSize="22dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/about_you_txt" />

        <TextView
            android:id="@+id/location_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/about_you"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:text="Location"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:id="@+id/location"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:hint="Add"
            android:inputType="text"
            android:textSize="22dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location_txt" />

        <TextView
            android:id="@+id/website_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:text="Website"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:id="@+id/website"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:hint="Add"
            android:inputType="text"
            android:textSize="22dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/website_txt" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>